---
import Layout from "../../layouts/Layout.astro";
import { ResetPasswordFormWithProvider } from "../../components/auth/ResetPasswordFormWithProvider";
import { LoginThemeToggle } from "../../components/LoginThemeToggle";

// This page is public (no auth required)
// Users come here from password reset email link
---

<Layout title="Reset Password - SavorAI" showHeader={false}>
  <!-- Dark mode toggle in top-right corner -->
  <LoginThemeToggle client:only="react" />

  <main class="container mx-auto px-4 py-16 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md">
      <ResetPasswordFormWithProvider client:only="react" />
    </div>
  </main>
</Layout>
