---
import Layout from "../layouts/Layout.astro";
import QueryProvider from "../components/QueryProvider";
import ProfileView from "../components/ProfileView";
import { Toaster } from "../components/ui/sonner";

// This page is client-side only (React island)
// Authentication check happens in ProfileView via API call
// 401 from API will trigger redirect to /login
---

<Layout title="My Profile - SavorAI">
  <QueryProvider client:load>
    <main class="container mx-auto px-4 py-8 max-w-2xl">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">My Dietary Preferences</h1>
        <p class="text-muted-foreground">
          Customize your dietary preferences to receive personalized recipe recommendations.
        </p>
      </div>

      <ProfileView client:load />
    </main>

    <Toaster client:load />
  </QueryProvider>
</Layout>
