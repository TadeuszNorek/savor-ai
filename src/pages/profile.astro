---
import Layout from "../layouts/Layout.astro";

// This is a protected page - middleware will redirect if not authenticated
const user = Astro.locals.user;
---

<Layout title="Profile - SavorAI">
  <main class="container mx-auto px-4 py-16 min-h-screen">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-4xl font-bold mb-4">Profile</h1>

      {user && (
        <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
          <p class="text-muted-foreground">You are logged in as:</p>
          <p class="text-xl font-semibold mt-2">{user.email}</p>
        </div>
      )}

      <div class="mt-8 text-center text-muted-foreground">
        <p>Profile preferences coming soon...</p>
      </div>
    </div>
  </main>
</Layout>
